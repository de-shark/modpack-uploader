<configuration>
    <!-- 控制台输出配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SS} [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 降低腾讯云 COS SDK 的日志等级 -->
    <logger name="com.qcloud.cos.http" level="WARN"/>

    <!-- 根日志设置为 INFO，并输出到控制台 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
